
@import "additional.styl"



body
	color #0E0E0E
	height 100%
	display flex
	flex-direction column

main
	flex 1


#header
	margin 0 
	height 70px
	
.navbar
	position fixed
	top 0
	width 100%
	z-index 2
	



.entrance
	gradient('reserve_banner2')
	make_entrance()
	
hr.style-seven 
	line_break()
hr.style-seven::before  /* Not really supposed to work, but does */
	line_break2()

.restaurants
	margin-top 600px
	display none
	font-size 15px
	
	
.about 
	background #eee
	width 100%
	height 400px
	padding-top 60px
	display none
.contact
	padding 50px
	height 400px
	display none

.exit 
	gradient('table_food')
	make_entrance()

footer
	color #FFFFFF
	remove_link(#FFFFFF, 18px)
	h1, h2, h3, h4, h5, h6
		text-decoration underline
		color #FFFFFF
	 

.miscellaneous
	background #0A0A0A
	font-size 15px
	padding-top 80px
	margin-top 50px
	.overview
		height 300px
		li
			list-style none
			line-height 30px
		i
			padding-top 80px
	@media screen and (min-width: 410px)
		height 400px
.bottom
	background #FFFFFF
	color #0E0E0E
	
			
	

gradient(name, color1=rgba(0, 0, 0, 0.7),color2=rgba(0, 0, 0, 0.7), local='public/img')
	background linear-gradient(
	      color1,
	      color2
	    ), url("../../../" + local + "/"+name+".jpg")
	background-repeat no-repeat
	background-size cover
	background-position center
	    
	    

make_entrance()
	position absolute
	width 100%
	height 550px
	margin-top 0 auto
	font-size 20px
	color #FFFFFF
	h1, h2, h3, h4, h5, h6
		padding-top 250px
		color #FFFFFF
	p span
		text-decoration underline
		font-weight bold

line_break()
	overflow visible /* For IE */
	height 30px
	border-style solid
	border-color black
	border-width 1px 0 0 0
	border-radius 20px
	
line_break2()
	display block
	content ""
	height 30px
	margin-top -31px
	border-style solid
	border-color black
	border-width 0 0 1px 0
	border-radius 20px
remove_link(color, size, color_size=true)
	a 
		^[1]:link, ^[1]:hover, ^[1]:visited, ^[1]:active
				text-decoration none
				if color_size
					color color
					font-size size
				else
					color #FFFFFF
					font-size 12px
				
